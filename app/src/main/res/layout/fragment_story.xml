<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/list_item_horizontal_margin"
    android:layout_marginTop="@dimen/list_item_vertical_margin"
    android:layout_marginEnd="@dimen/list_item_horizontal_margin"
    android:layout_marginBottom="@dimen/list_item_vertical_margin" >

    <TextView
        android:id="@+id/story_article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="@dimen/list_item_article_title_text_size"
        android:textStyle="bold"
        tools:text="This is the title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/story_article_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textStyle="italic"
        android:textSize="@dimen/list_item_article_url_text_size"
        tools:text="www.example.com"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/story_article_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/story_article_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="@dimen/list_item_article_num_comments_text_size"
        app:layout_constraintEnd_toStartOf="@id/story_article_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/story_article_url"
        tools:text="1h" />

    <TextView
        android:id="@+id/story_article_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="@dimen/list_item_article_num_comments_text_size"
        tools:text="username"
        app:layout_constraintTop_toBottomOf="@id/story_article_url"
        app:layout_constraintStart_toEndOf="@id/story_article_time"
        app:layout_constraintEnd_toStartOf="@id/story_article_points" />

    <TextView
        android:id="@+id/story_article_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="@dimen/list_item_article_num_comments_text_size"
        tools:text="12p"
        app:layout_constraintTop_toBottomOf="@id/story_article_url"
        app:layout_constraintStart_toEndOf="@id/story_article_user"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/story_article_num_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="@dimen/list_item_article_num_comments_text_size"
        tools:text="150"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/story_article_time" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/story_article_num_comments"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/comments_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>